<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<groupId>hu.bme.mit.trainbenchmark</groupId>
	<artifactId>hu.bme.mit.trainbenchmark</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.showWarnings>true</maven.compiler.showWarnings>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		<emf.version>2.10.0-v20140514-1158</emf.version>
	</properties>

	<profiles>

		<profile>
			<id>ci</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<modules>
				<module>hu.bme.mit.trainbenchmark.benchmark</module>
				<module>hu.bme.mit.trainbenchmark.benchmark.blazegraph</module>
				<module>hu.bme.mit.trainbenchmark.benchmark.drools5</module>
				<module>hu.bme.mit.trainbenchmark.benchmark.drools6</module>
				<module>hu.bme.mit.trainbenchmark.benchmark.eclipseocl</module>
				<module>hu.bme.mit.trainbenchmark.benchmark.emfapi</module>
				<module>hu.bme.mit.trainbenchmark.benchmark.emfincquery.patterns</module>
				<module>hu.bme.mit.trainbenchmark.benchmark.emfincquery</module>
				<module>hu.bme.mit.trainbenchmark.benchmark.jena</module>
				<module>hu.bme.mit.trainbenchmark.benchmark.mysql</module>
				<module>hu.bme.mit.trainbenchmark.benchmark.neo4j</module>
				<module>hu.bme.mit.trainbenchmark.benchmark.rdf</module>
				<module>hu.bme.mit.trainbenchmark.benchmark.sesame</module>
				<module>hu.bme.mit.trainbenchmark.benchmark.sql</module>
				<module>hu.bme.mit.trainbenchmark.config</module>
				<module>hu.bme.mit.trainbenchmark.emf</module>
				<module>hu.bme.mit.trainbenchmark.emf.model</module>
				<module>hu.bme.mit.trainbenchmark.generator</module>
				<module>hu.bme.mit.trainbenchmark.generator.emf</module>
				<module>hu.bme.mit.trainbenchmark.generator.graph</module>
				<module>hu.bme.mit.trainbenchmark.generator.sql</module>
				<module>hu.bme.mit.trainbenchmark.graph</module>
				<module>hu.bme.mit.trainbenchmark.rdf</module>
				<module>hu.bme.mit.trainbenchmark.sql</module>
			</modules>
		</profile>

		<profile>
			<id>notest</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<modules>
				<!-- <module>hu.bme.mit.trainbenchmark.benchmark.orientdb</module> -->
				<!-- <module>hu.bme.mit.trainbenchmark.benchmark.virtuoso</module> -->
			</modules>
		</profile>

		<!-- core -->

		<profile>
			<id>core</id>
			<modules>
				<module>hu.bme.mit.trainbenchmark.benchmark</module>
				<module>hu.bme.mit.trainbenchmark.config</module>
				<module>hu.bme.mit.trainbenchmark.generator</module>
			</modules>
		</profile>

		<!-- formats -->

		<profile>
			<id>graph</id>
			<modules>
				<module>hu.bme.mit.trainbenchmark.generator.graph</module>
				<module>hu.bme.mit.trainbenchmark.graph</module>
			</modules>
		</profile>

		<profile>
			<id>emf</id>
			<modules>
				<module>hu.bme.mit.trainbenchmark.emf</module>
				<module>hu.bme.mit.trainbenchmark.emf.model</module>
				<module>hu.bme.mit.trainbenchmark.generator.emf</module>
			</modules>
		</profile>

		<profile>
			<id>rdf</id>
			<modules>
				<module>hu.bme.mit.trainbenchmark.benchmark.rdf</module>
				<module>hu.bme.mit.trainbenchmark.generator.rdf</module>
				<module>hu.bme.mit.trainbenchmark.rdf</module>
			</modules>
		</profile>

		<profile>
			<id>sql</id>
			<modules>
				<module>hu.bme.mit.trainbenchmark.benchmark.sql</module>
				<module>hu.bme.mit.trainbenchmark.generator.sql</module>
				<module>hu.bme.mit.trainbenchmark.sql</module>
			</modules>
		</profile>

		<!-- tools -->
		<!-- there should be a specific build profile for each tool -->

		<profile>
			<id>blazegraph</id>
			<modules>
				<module>hu.bme.mit.trainbenchmark.benchmark.blazegraph</module>
				<module>hu.bme.mit.trainbenchmark.benchmark.sesame</module>
			</modules>
		</profile>

		<profile>
			<id>drools5</id>
			<modules>
				<module>hu.bme.mit.trainbenchmark.benchmark.drools5</module>
			</modules>
		</profile>

		<profile>
			<id>drools6</id>
			<modules>
				<module>hu.bme.mit.trainbenchmark.benchmark.drools6</module>
			</modules>
		</profile>

		<profile>
			<id>eclipseocl</id>
			<modules>
				<module>hu.bme.mit.trainbenchmark.benchmark.eclipseocl</module>
			</modules>
		</profile>

		<profile>
			<id>emfapi</id>
			<modules>
				<module>hu.bme.mit.trainbenchmark.benchmark.emfapi</module>
			</modules>
		</profile>

		<profile>
			<id>emfincquery</id>
			<modules>
				<module>hu.bme.mit.trainbenchmark.benchmark.emfincquery</module>
				<module>hu.bme.mit.trainbenchmark.benchmark.emfincquery.patterns</module>
			</modules>
		</profile>

		<profile>
			<id>hawk</id>
			<modules>
				<module>hu.bme.mit.trainbenchmark.benchmark.hawk</module>
			</modules>
		</profile>

		<profile>
			<id>iqdcore</id>
			<modules>
				<module>hu.bme.mit.trainbenchmark.benchmark.iqdcore</module>
			</modules>
		</profile>

		<profile>
			<id>jena</id>
			<modules>
				<module>hu.bme.mit.trainbenchmark.benchmark.jena</module>
			</modules>
		</profile>

		<profile>
			<id>memsql</id>
			<modules>
				<module>hu.bme.mit.trainbenchmark.benchmark.memsql</module>
			</modules>
		</profile>

		<profile>
			<id>mysql</id>
			<modules>
				<module>hu.bme.mit.trainbenchmark.benchmark.mysql</module>
			</modules>
		</profile>

		<profile>
			<id>neo4j</id>
			<modules>
				<module>hu.bme.mit.trainbenchmark.benchmark.neo4j</module>
				<module>hu.bme.mit.trainbenchmark.graph</module>
			</modules>
		</profile>

		<profile>
			<id>postgresql</id>
			<modules>
				<module>hu.bme.mit.trainbenchmark.benchmark.postgresql</module>
			</modules>
		</profile>

		<profile>
			<id>orientdb</id>
			<modules>
				<module>hu.bme.mit.trainbenchmark.benchmark.orientdb</module>
			</modules>
		</profile>

		<profile>
			<id>sesame</id>
			<modules>
				<module>hu.bme.mit.trainbenchmark.benchmark.sesame</module>
			</modules>
		</profile>

		<profile>
			<id>virtuoso</id>
			<modules>
				<module>hu.bme.mit.trainbenchmark.benchmark.sesame</module>
				<module>hu.bme.mit.trainbenchmark.benchmark.virtuoso</module>
			</modules>
		</profile>

	</profiles>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>2.4</version>
				<executions>
					<execution>
						<id>attach-sources</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>

		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-dependency-plugin</artifactId>
					<executions>
						<execution>
							<id>copy-dependencies</id>
							<phase>package</phase>
							<goals>
								<goal>copy-dependencies</goal>
							</goals>
							<configuration>
								<outputDirectory>${project.build.directory}/lib</outputDirectory>
								<overWriteReleases>false</overWriteReleases>
								<overWriteSnapshots>false</overWriteSnapshots>
								<overWriteIfNewer>true</overWriteIfNewer>
							</configuration>
						</execution>
					</executions>
				</plugin>
				<!--This plugin's configuration is used to store Eclipse m2e settings 
					only. It has no influence on the Maven build itself. -->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.apache.maven.plugins
										</groupId>
										<artifactId>
											maven-dependency-plugin
										</artifactId>
										<versionRange>
											[2.1,)
										</versionRange>
										<goals>
											<goal>
												copy-dependencies
											</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

</project>
